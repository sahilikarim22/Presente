<!DOCTYPE html>
<html>

<head>
    <title>
        Cursos Estudiantes
    </title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <!-- CSS personalizado -->
    <link rel="stylesheet" href="/css/main.css">
    <!--datables CSS básico-->
    <link rel="stylesheet" type="text/css" href="/datatables/datatables.min.css" />
    <!--datables estilo bootstrap 4 CSS-->
    <link rel="stylesheet" type="text/css" href="/datatables/DataTables-1.10.18/css/dataTables.bootstrap4.min.css">
    <!--Iconos Font Awesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">


</head>

<body>



    <div class="container">
        <div class="row mt-4">
            <div class="col-sm-12 col-md-12 d-flex flex-column align-items-center text-center">
                <span class="circulo">
                    <i class="fas fa-user" style="font-size: 3rem;"></i>
                </span>
                <h3 class="text-white">
                    <%= usuario.nombres %>
                        <%= usuario.apellidos %><i class="fa-solid fa-browser"></i>
                </h3>
                <h5 class="text-white">Estudiante</h5>
                <button id="abrirModal" class="btn btn-primary">Unirme a Curso </button>
            </div>
            <img class="trianguloDerecha" src="/imagenes/t_derecha.svg" />
        </div>
        <% if (cursos && cursos.length> 0) { %>
            <div class="row mt-4">
                <div class="col-6">
                    <h5 class="card-title text-white">Mis Cursos</h5>
                </div>
                <div class="col-6">
                    <h5 class="card-title text-white">Porcentaje de asistencias</h5>
                </div>
                <div class="col-12">
                    <% cursos.forEach((curso)=> { %>
                        <div class="card card-background">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-8">
                                        <!-- Enlace al curso con la URL correcta -->
                                        <p class="card-text fw-bold nombreCurso">
                                            <%= curso.nombreCurso %>
                                        </p>
                                    </div>
                                    
                                    <div class="col-4 porcentaje">
                                        <% if (curso.porcentajeAsistencia >= 75) { %>
                                            <div class="progress-bar-75" role="progressbar">
                                                <span class="sr-only">
                                                    <%= curso.porcentajeAsistencia %>%
                                                </span>
                                                <%= curso.porcentajeAsistencia %>%
                                            </div>
                                        <% }else if (curso.porcentajeAsistencia >= 75) { %>
                                        <div class="progress-bar-75" role="progressbar">
                                            <span class="sr-only">
                                                <%= curso.porcentajeAsistencia %>%
                                            </span>
                                            <%= curso.porcentajeAsistencia %>%
                                        </div>
                                        <% } else if (curso.porcentajeAsistencia >= 50) { %>
                                        <div class="progress-bar-50" role="progressbar">
                                            <span class="sr-only">
                                                <%= curso.porcentajeAsistencia %>%
                                            </span>
                                            <%= curso.porcentajeAsistencia %>%
                                        </div>
                                        <% } else if (curso.porcentajeAsistencia >= 25) { %>
                                        <div class="progress-bar-25" role="progressbar">
                                            <span class="sr-only">
                                                <%= curso.porcentajeAsistencia %>%
                                            </span>
                                            <%= curso.porcentajeAsistencia %>%
                                        </div>
                                        <% } else { %>
                                        <div class="progress-bar-0" role="progressbar">
                                            <span class="sr-only">
                                                <%= curso.porcentajeAsistencia %>%
                                            </span>
                                            <%= curso.porcentajeAsistencia %>%
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                        </div>

                        <% }) %>        
                
                    </div>













            </div>
    </div>
    <% } else { %>
        <div class="row mt-4">
            <div class="col-12 text-center">
                <p class="text-white">Aún no tienes cursos inscritos.</p>
            </div>
        </div>
        <% } %>
            </div>

            <form method="POST" action="/inscribirCurso">
                <div id="modalAgregar" class="modal fade">
                    <div class="modal-dialog">

                        <div class="modal-content">
                            <button id="cerrar" class="btn botonCerrar" data-dismiss="modal">X</button>

                            <div class="modal-header">
                                <h4 class="modal-title text-uppercase">AGREGAR CURSO</h4>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="nrc" class="ModalTituloCampo">NRC: </label>
                                    <input class="form-control inputModal" name="nrc" type="number" min="0" step="1">
                                </div>
                            </div>
                            <div class="modal-footer text-center justify-content-center mx-auto">
                                <button type="submit" id="guardar" class="btn botonGuardar">Guardar</button>

                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <%- include('menuMovil') %>

                </div>




                <!-- jQuery, Popper.js, Bootstrap JS -->
                <script src="/jquery/jquery-3.3.1.min.js"></script>
                <script src="/popper/popper.min.js"></script>
                <script src="/bootstrap/js/bootstrap.min.js"></script>


                <script>



                    $(document).ready(function () {

                        // Abre el modal al hacer clic en el botón
                        $('#abrirModal').on('click', function () {
                            $('#modalAgregar').modal('show');
                        });

                        // Agrega datos al DataTable y guarda en localStorage
                        $('#guardar').on('click', function () {
                            var nombrePeriodo = $('#nombrePeriodo').val();
                            var semanas = $('#semanas').val();
                            var idCurso = $('#idCurso').val();

                            // Cierra el modal
                            $('#modalAgregar').modal('hide');
                        });

                        // Cierra el modal al hacer clic en el botón
                        $('#cerrar').on('click', function () {
                            $('#modalAgregar').modal('hide');
                            event.preventDefault();

                        });
                    });


                    // Función para obtener la clase correspondiente al porcentaje
                    // Función para determinar la clase de ancho de la barra según el porcentaje
                    function obtenerAnchoBarra(porcentaje) {
                        if (porcentaje >= 75) {
                            return 'barra-75'; // Asigna la clase correspondiente al 75% de la barra
                        } else if (porcentaje >= 50) {
                            return 'barra-50'; // Asigna la clase correspondiente al 50% de la barra
                        } else if (porcentaje >= 25) {
                            return 'barra-25'; // Asigna la clase correspondiente al 25% de la barra
                        } else {
                            return 'barra-0'; // Si el porcentaje es menor que 25, asigna la clase al 0%
                        }
                    }








                </script>



</body>

</html>