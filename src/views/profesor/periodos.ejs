<!DOCTYPE html>
<html>

<head>
    <title> Periodos Profesor
    </title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <!-- CSS personalizado -->
    <link rel="stylesheet" href="/css/main.css">

    <!--datables CSS básico-->
    <link rel="stylesheet" type="text/css" href="/datatables/datatables.min.css" />
    <!--datables estilo bootstrap 4 CSS-->
    <link rel="stylesheet" type="text/css" href="/datatables/DataTables-1.10.18/css/dataTables.bootstrap4.min.css">
    <!--Iconos Font Awesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!--font awesome con CDN-->

</head>

<body>

    <div class="sidebar">

        <ul class="menu">

            <li class="home"><a href="#"><i class="fas fa-home"></i></a></li>
            <li class="salir"><a href="#"><i class="fas fa-sign-out-alt"></i></a></li>
        </ul>
    </div>
    <div class="content">

        <div class="container">
            <div class="row mt-4">
                <div class="col-sm-12 col-md-12 d-flex flex-column align-items-center text-center">
                    <span class="circulo">
                        <i class="fas fa-user" style="font-size: 3rem;"></i>
                    </span>
                    <% if (docente && docente.length> 0) { %>
                        <h3 class="text-white">
                            <%= docente[0].nombres %>
                                <%= docente[0].apellidos %>
                        </h3>
                        <% } %>
                            <h5 class="text-white">Profesor</h5>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <% if (periodos.length===0 ) { %>
                        <h1 class="text-white text-center">Aún no se han creado Períodos Académicos</h1>
                        <% }else{ %>
                            <h1 class="nombrePeriodo">Periodos</h1>
                            <% } %>
                </div>
                <% if (periodos.length> 0) { %>
                    <% periodos.forEach((periodo)=>{ %>
                        <div class="col-12">
                            <a href="/profesor/cursos/<%= periodo.id %>" class="text-decoration-none">
                                <div class="card card-background contenedorPeriodo text-center">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="d-flex justify-content-between align-items-center p-3">
                                                <p class="fw-bold text-white text-capitalize mb-0">
                                                    <%= periodo.nombrePeriodo %>
                                                </p>
                                            </div>
                                            <div class="d-flex justify-content-end p-3">
                                                <i class="fa fa-arrow-circle-right text-white"
                                                    style="font-size: 24px;"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% }) %>
                            <% } %>
            </div>



            <!-- jQuery, Popper.js, Bootstrap JS -->
            <script src="/jquery/jquery-3.3.1.min.js"></script>
            <script src="/popper/popper.min.js"></script>
            <script src="/bootstrap/js/bootstrap.min.js"></script>





            <!-- código JS propio-->
            <script type="text/javascript" src="/js/main.js"></script>

          



</body>

</html>