        <div class="col-md-12 col-lg-12 fondoTabla">
            <table id="tablaAsistencia"
                class="table table-bordered table-dark table-striped text-white text-center mt-4 ">
                <thead>
                    <tr class="bg-primary text-white">
                        <th scope="col">Cédula</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Presente</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="">
                            fecha
                        </td>
                        <td class="">
                            tema
                        </td>
                        <td class="">
                            <input type="checkbox" name="" id="" class="botonCheckbox">

                        </td>
                    </tr>


                </tbody>



            </table>
            <div class="col-xs-12 col-md-12 col-lg-12 d-flex justify-content-center">
                <button type="button" class="btn escanear" data-toggle="modal" data-target="#exampleModal">
                    Guardar <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                        style="fill: rgba(0, 0, 0, 1);">
                        <path d="m12 16 4-5h-3V4h-2v7H8z"></path>
                        <path d="M20 18H4v-7H2v7c0 1.103.897 2 2 2h16c1.103 0 2-.897 2-2v-7h-2v7z"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    </div>


    <div class="navegacion">
        <ul>



            <li class="list">
                <a href="#">
                    <span class="icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24"
